@model CreateQuizViewModel

<div class="parent-for-all-fields">
    <div class="fields">
        <div class="fields-title">
            Create Quiz
        </div>
        <form method="post" asp-controller="Quiz" asp-action="CreateQuiz" asp-antiforgery="true">
            <div>
                <div>
                    <label asp-for="Title"></label>
                </div>
                <div>
                    <input type="text" asp-for="Title" />
                </div>
            </div>
            <div>
                <div>
                    <label asp-for="QuestionsQuantity"></label>
                    <span asp-validation-for="QuestionsQuantity"></span>
                </div>
                <div>
                    <input type="number" asp-for="QuestionsQuantity" />
                </div>
            </div>
            <div>
                <input type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>