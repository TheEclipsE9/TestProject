@model WordViewModel
@using TestProjectWeb.Data.Enums

<div>
    Register
    <form method="post" asp-controller="Word" asp-action="EditWord" asp-antiforgery="true">
        <div>
            <label asp-for="Value"></label>
            <input type="text" value="@Model.Value" asp-for="Value" />
        </div>
        <div>
            <label asp-for="Translation"></label>
            <input type="text" value="@Model.Translation" asp-for="Translation" />
        </div>
        <div>
            <label asp-for="Category"></label>
            <input type="text" value="@Model.Category" asp-for="Category" />
        </div>
        <div>
            <label asp-for="PartOfSpeech"></label>
            <select asp-for="PartOfSpeech" value="@Model.PartOfSpeech"  asp-items="Html.GetEnumSelectList<PartsOfSpeech>()">
            </select>
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
    <a asp-area="" asp-controller="Profile" asp-action="Profile">Back</a>
</div>