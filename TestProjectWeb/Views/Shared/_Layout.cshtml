@using TestProjectWeb.Services
@inject UserService userService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]TestProjectWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/validation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestProjectWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            @if (!User.Identity.IsAuthenticated)
            {
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                <div>
                    <a asp-area="" asp-controller="User" asp-action="AllUsers">All users</a>
                </div>
                <div>
                    <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </div>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <a asp-area="" asp-controller="Profile" asp-action="Profile">Profile</a>
                </div>
                <div>
                    <a asp-area="" asp-controller="User" asp-action="AllUsers">All users</a>
                </div>
                <div>
                    <a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                </div>
            }

        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer>
        <div>
            &copy; 2022 - TestProjectWeb
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
