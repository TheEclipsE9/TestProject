@using TestProjectWeb.Models;
@model ProfileViewModel
@section Scripts{
<link rel="stylesheet" href="~/css/profileProfile.css">
<script src="~/js/profile.js"></script>
}

<div class="profile">
    <div class="profile-side">
        <div class="profile-side-info">
            <div>
                Your profile:
            </div>
            <div>
                Id: @Model.UserViewModel.Id
            </div>
            <div>
                Name: @Model.UserViewModel.Name
            </div>
            <div>
                Country: @Model.UserViewModel.Country
            </div>
            <div>
                City: @Model.UserViewModel.City
            </div>
            <div>
                LearningLanguage: @Model.UserViewModel.LearningLanguage
            </div>
            <div>
                LanguageLevel: @Model.UserViewModel.LanguageLevel
            </div>
        </div>
        <div class="profile-side-links">
            <div>
                <a class="link-options-open" href="#">Options</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Account" asp-action="DeleteAccount" asp-route-id="@Model.UserViewModel.Id">Delete account</a>
            </div>
        </div>
        <div class="profile-side-actions">
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Random word</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Word" asp-action="CreateWord">Create word</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Random trenning</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Create quiz</a>
            </div>
        </div>
    </div>
    <div class="profile-content">
        <div class="profile-content-search">
            Search:
        </div>
        <div class="profile-content-table">
            <div class="profile-content-table-row">
                <div class="profile-content-table-row-title">
                    <div>
                        Word
                    </div>
                </div>
                <div class="profile-content-table-row-title">
                    <div>
                        Translation
                    </div>
                </div>
                <div class="profile-content-table-row-title">
                    <div>
                        Category
                    </div>
                </div>
                <div class="profile-content-table-row-title">
                    <div>
                        Part of Speech
                    </div>
                </div>
            </div>
            @foreach (var word in @Model.WordViewModels)
            {
                <div class="profile-content-table-row">
                    <div class="profile-content-table-row-item">
                        <div>
                            <span>
                                @word.Value
                            </span>
                            <span>
                                <a asp-controller="Word" asp-action="EditWord" asp-route-id="@word.Id">E</a>
                                <a asp-controller="Word" asp-action="DeleteWord" asp-route-id="@word.Id">D</a>
                            </span>
                        </div>
                    </div>
                    <div class="profile-content-table-row-item">
                        <div>
                            @word.Translation
                        </div>
                    </div>
                    <div class="profile-content-table-row-item">
                        <div>
                            @word.Category
                        </div>
                    </div>
                    <div class="profile-content-table-row-item">
                        <div>
                            @word.PartOfSpeech
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


<div class="profile-options">
    <div class="profile-options-window">
        <div class="profile-options-header">
            <a href="#" class="link-options-close">Close</a>
        </div>
        <div class="profile-options-fields">
            <form method="post" asp-controller="Profile" asp-action="EditProfile" asp-antiforgery="true">
                <div>
                    <label asp-for="UserViewModel.Name"></label>
                </div>
                <div>
                    <input type="text" asp-for="UserViewModel.Name" />
                </div>
                <div>
                    <input type="submit" value="Change" />
                </div>
            </form>
        </div>
    </div>
</div>