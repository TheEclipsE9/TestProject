@using TestProjectWeb.Models;
@model ProfileViewModel
@section Scripts{
<link rel="stylesheet" href="~/css/profileProfile.css">
}

<div class="profile">
    <div class="profile-side">
        <div class="profile-side-info">
            <div>
                Your profile:
            </div>
            <div>
                Id: @Model.UserViewModel.Id
            </div>
            <div>
                Name: @Model.UserViewModel.Name
            </div>
            <div>
                Password: @Model.UserViewModel.Password
            </div>
        </div>
        <div class="profile-side-links">
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Options</a>
            </div>            
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Delete account</a>
            </div>
        </div>
        <div class="profile-side-actions">
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Random word</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Word" asp-action="Create word">CreateWord</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Random trenning</a>
            </div>
            <div>
                <a asp-area="" asp-controller="Word" asp-action="#">Create quiz</a>
            </div>
        </div>
    </div>
    <div class="profile-content">
        <div class="profile-content-search">
            Search:
        </div>
        <div class="profile-content-table">
            <div class="profile-content-table-row">
                <div class="profile-content-table-row-title">
                    <div>
                        Word
                    </div>
                </div>
                <div class="profile-content-table-row-title">
                    <div>
                        Translation
                    </div>
                </div>
                <div class="profile-content-table-row-title">
                    <div>
                        Category
                    </div>
                </div>
                <div class="profile-content-table-row-title">
                    <div>
                        Part of Speech
                    </div>
                </div>
            </div>
            @foreach (var word in @Model.WordViewModels)
            {
                <div class="profile-content-table-row">
                    <div class="profile-content-table-row-item">
                        <div>
                            <span>
                                @word.Value
                            </span>
                            <span>
                                <a asp-controller="Word" asp-action="EditWord" asp-route-id="@word.Id">E</a>
                                <a asp-controller="Word" asp-action="DeleteWord" asp-route-id="@word.Id">D</a>
                            </span>
                        </div>
                    </div>
                    <div class="profile-content-table-row-item">
                        <div>
                            @word.Translation
                        </div>
                    </div>
                    <div class="profile-content-table-row-item">
                        <div>
                            @word.Category
                        </div>
                    </div>
                    <div class="profile-content-table-row-item">
                        <div>
                            @word.PartOfSpeech
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
